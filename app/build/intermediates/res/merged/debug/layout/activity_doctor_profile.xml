<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.loginandregistration.activity.DoctorProfile">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="344dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        tools:ignore="UselessParent">


        <com.android.volley.toolbox.NetworkImageView
            android:layout_marginTop="20dip"
            android:id="@+id/doctoreimage"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_gravity="center"

            android:scaleType="centerCrop"
            app:sriv_border_color="#FFCC00"
            app:sriv_border_width="2dp"
            app:sriv_oval="true"
            android:layout_weight="0.77" />


        <TextView
            android:id="@+id/doctorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/lbl_name"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/doctornationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/lbl_name"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/doctorgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/lbl_name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/doctorspcl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/lbl_name"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnmsg"
            android:layout_width="276dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dip"
            android:background="@color/btn_logut_bg"
            android:text="@string/message_doctor"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnbook"
            android:layout_width="276dp"
            android:layout_height="40dip"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="10dip"
            android:background="@color/btn_logut_bg"
            android:text="@string/request_appointment"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
        android:layout_weight="0.15" />

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="?android:attr/windowBackground"
                app:menu="@menu/navigation" />

        </LinearLayout>


    </LinearLayout>



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
